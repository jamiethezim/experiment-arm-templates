{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "sourceImageVhdUri": {
      "type": "string"
    },   
    "vmssName": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "defaultValue": "",
      "type": "securestring"
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": ""
    },
    "authenticationType": {
      "type": "string",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ]
    },
    "vmSku": {
      "type": "string",
      "defaultValue": "Standard_D1_v2"
    },
    "instanceCount": {
      "type": "string"
    },
    "singlePlacementGroup": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "osDisk": {
      "type": "object"
    },
    "nicName": {
      "type": "string"
    },
    "ipConfigName": {
      "type": "string"
    },
    "subnetId": {
      "type": "string"
    },
    "loadBalancerBackendAddressPools": {
      "type": "array"
    },
    "loadBalancerInboundNatPools": {
      "type": "array"
    }
  },
  "variables": {
    "imageCentOs6.8": {
      "sku": "6.8",
      "publisher": "OpenLogic",
      "version": "latest",
      "offer": "CentOS"
    },
    "imageCentOs7.2": {
      "sku": "7.2",
      "publisher": "OpenLogic",
      "version": "latest",
      "offer": "CentOS"
    },
    "imageCoreOsBeta": {
      "sku": "Beta",
      "publisher": "CoreOS",
      "version": "latest",
      "offer": "CoreOS"
    },
    "imageCoreOsStable": {
      "sku": "Stable",
      "publisher": "CoreOS",
      "version": "latest",
      "offer": "CoreOS"
    },
    "imageDebian7.0": {
      "sku": "7",
      "publisher": "credativ",
      "version": "latest",
      "offer": "Debian"
    },
    "imageDebian8.0": {
      "sku": "8",
      "publisher": "credativ",
      "version": "latest",
      "offer": "Debian"
    },
    "imageOpenSuseLeap42.1": {
      "sku": "42.1",
      "publisher": "SUSE",
      "version": "latest",
      "offer": "openSUSE-Leap"
    },
    "imageRHEL6.8": {
      "sku": "6.8",
      "publisher": "RedHat",
      "version": "latest",
      "offer": "RHEL"
    },
    "imageRHEL7.2": {
      "sku": "7.2",
      "publisher": "RedHat",
      "version": "latest",
      "offer": "RHEL"
    },
    "imageSLES11-SP4": {
      "sku": "11-SP4",
      "publisher": "SUSE",
      "version": "latest",
      "offer": "SLES"
    },
    "imageSLES12-SP1": {
      "sku": "12-SP1",
      "publisher": "SUSE",
      "version": "latest",
      "offer": "SLES"
    },
    "imageUbuntu14.04.5-LTS": {
      "sku": "14.04.5-LTS",
      "publisher": "Canonical",
      "version": "latest",
      "offer": "UbuntuServer"
    },
    "imageUbuntu16.04-LTS": {
      "sku": "16.04-LTS",
      "publisher": "Canonical",
      "version": "latest",
      "offer": "UbuntuServer"
    },
    "imageUbuntu14.04.3-LTS": {
      "sku": "14.04.3-LTS",
      "publisher": "Canonical",
      "version": "latest",
      "offer": "UbuntuServer"
    },
    "imageUbuntu14.04.4-LTS": {
      "sku": "14.04.4-LTS",
      "publisher": "Canonical",
      "version": "latest",
      "offer": "UbuntuServer"
    },
    "image2016-Datacenter": {
      "sku": "2016-Datacenter",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "image2016-Datacenter-with-Containers": {
      "sku": "2016-Datacenter-with-Containers",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "image2016-Nano-Server": {
      "sku": "2016-Nano-Server",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "image2008-R2-SP1": {
      "sku": "2008-R2-SP1",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "image2012-Datacenter": {
      "sku": "2012-Datacenter",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "image2012-R2-Datacenter": {
      "sku": "2012-R2-Datacenter",
      "publisher": "MicrosoftWindowsServer",
      "version": "latest",
      "offer": "WindowsServer"
    },
    "imageReference": "[variables(concat('image', parameters('image')))]",
    "namingInfix": "[toLower(substring(concat(parameters('vmssName'), uniqueString(resourceGroup().id)), 0, 9))]",
    "osProfilepassword": {
      "computerNamePrefix": "[variables('namingInfix')]",
      "adminUsername": "[parameters('username')]",
      "adminPassword": "[parameters('password')]"
    },
    "sshKeyPath": "[concat('/home/',parameters('username'),'/.ssh/authorized_keys')]",
    "osProfilesshPublicKey": {
      "computerNamePrefix": "[variables('namingInfix')]",
      "adminUsername": "[parameters('username')]",
      "adminPassword": "[parameters('password')]",
      "linuxConfiguration": {
        "disablePasswordAuthentication": "true",
        "ssh": {
          "publicKeys": [
            {
              "path": "[variables('sshKeyPath')]",
              "keyData": "[parameters('sshPublicKey')]"
            }
          ]
        }
      }
    },
    "osProfileReference": "[variables(concat('osProfile', parameters('authenticationType')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "[parameters('vmssName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2016-04-30-preview",
      "sku": {
        "name": "[parameters('vmSku')]",
        "tier": "Standard",
        "capacity": "[int(parameters('instanceCount'))]"
      },
      "properties": {
        "singlePlacementGroup": "[parameters('singlePlacementGroup')]",
        "overprovision": true,
        "upgradePolicy": {
          "mode": "Manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "name": "vmssosdisk",
              "caching": "ReadWrite",
              "createOption": "FromImage",
              "osType": "Linux",
              "image": {
                "uri": "[parameters('sourceImageVhdUri')]"
              }
            }
          },
          "osProfile": "[variables('osProfileReference')]",
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "[parameters('nicName')]",
                "properties": {
                  "primary": "true",
                  "ipConfigurations": [
                    {
                      "name": "[parameters('ipConfigName')]",
                      "properties": {
                        "subnet": {
                          "id": "[parameters('subnetId')]"
                        },
                        "loadBalancerBackendAddressPools": "[parameters('loadBalancerBackendAddressPools')]",
                        "loadBalancerInboundNatPools": "[parameters('loadBalancerInboundNatPools')]"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "vmssId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]"
    }
  }
}