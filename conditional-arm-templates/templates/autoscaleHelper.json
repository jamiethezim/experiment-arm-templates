{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "autoscaleYesOrNo": {
      "type": "string",
      "defaultValue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ]
    },
    "autoscaleMin": {
      "type": "string",
      "defaultValue": "1"
    },
    "autoscaleMax": {
      "type": "string",
      "defaultValue": "10"
    },
    "autoscaleDefault": {
      "type": "string",
      "defaultValue": "1"
    },
    "scaleOutNetworkInThreshold": {
      "type": "string",
      "defaultValue": "1000000000"
    },
    "scaleOutInterval": {
      "type": "string",
      "defaultValue": "1"
    },
    "scaleInNetworkInThreshold": {
      "type": "string",
      "defaultValue": "500000000"
    },
    "scaleInInterval": {
      "type": "string",
      "defaultValue": "1"
    },
    "vmssId": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Insights/autoscaleSettings",
      "apiVersion": "2015-04-01",
      "name": "networkautoscale",
      "location": "eastus",
      "properties": {
        "name": "networkautoscale",
        "targetResourceUri": "[parameters('vmssId')]",
        "enabled": true,
        "profiles": [
          {
            "name": "Profile1",
            "capacity": {
              "minimum": "[parameters('autoscaleMin')]",
              "maximum": "[parameters('autoscaleMax')]",
              "default": "[parameters('autoscaleDefault')]"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "Network In",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('vmssId')]",
                  "timeGrain": "PT1M",
                  "statistic": "Sum",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": "[parameters('scaleOutNetworkInThreshold')]"
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "[parameters('scaleOutInterval')]",
                  "cooldown": "PT3M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "Network In",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('vmssId')]",
                  "timeGrain": "PT1M",
                  "statistic": "Sum",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": "[parameters('scaleInNetworkInThreshold')]"
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "[parameters('scaleInInterval')]",
                  "cooldown": "PT1M"
                }
              }
            ]
          }
        ]
      }
    }
  ]
}